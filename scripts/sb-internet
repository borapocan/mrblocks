#!/usr/bin/env sh

TERMINAL='st';

case $BLOCK_BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+1 dwmblocks ;;
	3) notify-send "ðŸŒ Internet module" "\- Click to connect
âŒ: wifi disabled or no wifi connection
ðŸ›œ: wifi connection with quality
ðŸ”—: ethernet working
ðŸ”’: vpn is active
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Wifi
if [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'up' ] ; then
	wifiicon="$(awk '/^\s*w/ { print " ðŸ›œ" , int($3 * 100 / 70) "% " }' /proc/net/wireless)"
elif [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'down' ] ; then
	[ "$(cat /sys/class/net/w*/flags 2>/dev/null)" = '0x1003' ] && wifiicon="ðŸ›œ" || wifiicon="âŒ"
fi

# Ethernet
[ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = 'up' ] && ethericon="ðŸ”—"
# [ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = 'up' ] && ethericon="ïƒ¨ " || ethericon="ï„§ "

# TUN
[ -n "$(cat /sys/class/net/tun*/operstate 2>/dev/null)" ] && tunicon="ðŸ”’"
# [ -n "$(cat /sys/class/net/tun*/operstate 2>/dev/null)" ] && tunicon="ðŸ”’" || tunicon=""

printf "%s%s%s\n" "$wifiicon" "$ethericon" "$tunicon"
